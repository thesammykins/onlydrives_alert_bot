{
  "name": "onlydrives-alert-bot",
  "version": "1.0.0",
  "description": "Discord bot for monitoring OnlyDrives price changes",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "deploy-commands": "tsx src/deploy-commands.ts",
    "db:init": "tsx src/scripts/init-db.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "price-monitor",
    "drives",
    "storage"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.3.0",
    "discord.js": "^14.14.1",
    "dotenv": "^17.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
